@model IEnumerable<İnfotechProje.Models.Product>
    @{
        ViewData["Title"] = "Users";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    <link rel="stylesheet" href="/admin/plugins/datatables/dataTables.bootstrap.css">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Product List</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Price</th>
                                <th><a asp-action="CreateUpdateProduct" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Add Product</a></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>@item.Title</td>
                                    <td>
                                        <img src="/images/@item.ProductArtUrl" width="50">
                                    </td>
                                    <td>@item.Price</td>
                                    <td>
                                    <a asp-action="CreateUpdateProduct" asp-route-id="@item.ProductId"><i class="fa fa-marker fa-lg"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="text-danger ml-1" onclick="return confirm('Do you want to delete the product?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div><!-- /.box -->

        </div><!--/.col (left) -->
        <!-- right column -->
        <!--/.col (right) -->
    </div>
    <script src="/admin/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <script src="/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/admin/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
            },
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true
        });
    });
    </script>
