<section class="food_section layout_padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    
                </div>
                <div class="box-body">
                    <div class="row g-4">

                        <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="product-item">
                                <div class="position-relative bg-light overflow-hidden">
                                    <img class="img-fluid w-100" src="~/@Model.ProductArtUrl" alt="">
                                    <!--<div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">New</div>-->
                                </div>
                                <div class="text-center p-4">
                                    <a class="d-block h5 mb-2" href="#tab-2">@Model.Title</a>
                                    <a class="d-block h5 mb-2" href="#tab-2"></a>
                                    <span class="text-primary me-1">@Model.Price</span>
                                    @*  <span class="text-body text-decoration-line-through">$29.00</span>*@
                                </div>
                                <div class="d-flex border-top">
                                    <!--<small class="w-50 text-center border-end py-2">
                                        <a class="text-body" href=""><i class="fa fa-eye text-primary me-2"></i>View detail</a>
                                    </small>-->
                                    @*    <small class="w-50 text-center py-2">
                                    <a class="text-body" href="#tab-2"><i class="fa fa-shopping-bag text-primary me-2"></i>Sepete Ekle</a>
                                    </small>*@
                                    <a href="/Cart/AddToCart/@Model.ProductId">
                                        <i class="fa fa-plus"></i>
                                    </a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>

